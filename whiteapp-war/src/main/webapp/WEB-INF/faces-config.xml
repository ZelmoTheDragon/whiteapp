<?xml version='1.0' encoding='UTF-8'?>
<!--
    JSF 2.3
    
    Fichier de configuration de JSF.
    Ce fichier même vide est requis pour le fonctionnement nominal
    de cette technologie.
    La configuration est réalisée par les annotations.
    Mais certaines configurations nécessitent d'être déclarées 
    en XML dans ce fichier.
-->
<faces-config 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd" 
    version="2.3">
        
    <!--
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>Messages</base-name>
            <var>m</var>
        </resource-bundle>
    </application>
    -->
    
    <protected-views>
        <url-pattern>/faces/protected/*.xhtml</url-pattern>
    </protected-views>
    
</faces-config>
